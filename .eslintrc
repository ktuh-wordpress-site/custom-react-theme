{
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-param-reassign": "off",
    "max-len": ["error", 120],
    "no-console": "off",
    "prefer-arrow-callback": "off",
    "no-plusplus": "off",
    "linebreak-style": "off",
    "func-names": "off",
    "no-restricted-syntax": "off",
    "react/jsx-key": "off",
    "comma-dangle": "off",
    "no-mixed-operators": "off",
    "one-var": "off",
    "one-var-declaration-per-line": "off",
    "prefer-const": "off",
    "import/no-named-default": "off",
    "no-underscore-dangle": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
    "no-nested-ternary": "off"
  },
  "globals": {
    "_": true,
    "$": true,
    "document": true,
    "window": true,
    "fetch": true,
    "navigator": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".jsx"]
      }
    }
  }
}
